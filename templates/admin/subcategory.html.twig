{% extends 'base.html.twig' %}

{% block title %}Панель управления{% endblock %}

{% block body %}
    <section id="subintro">
        <div class="jumbotron subhead" id="overview">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <div class="centered">
                            <h3>Панель управления</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <ul class="breadcrumb notop">
                        <li><a href="{{ path('admin') }}">Панель управления</a><span class="divider">/</span></li>
                        <li class="active">Добавление подкатегории</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                <div class="span8 offset2">
                    {{ form_start(subcategoryForm) }}
                    {{ form_row(subcategoryForm.name) }}
                    {{ form_row(subcategoryForm.category) }}
                    <button type="submit" class="btn btn-color spacer30">Добавить</button>
                    {{ form_end(subcategoryForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Панель управления{% endblock %}

{% block body %}
    <section id="subintro">
        <div class="jumbotron subhead" id="overview">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <div class="centered">
                            <h3>Панель управления</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <ul class="breadcrumb notop">
                        <li><a href="{{ path('index') }}">Главная</a><span class="divider">/</span></li>
                        <li class="active">Панель управления</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                <div class="span4">
                    <div class="tagline">
                        <h4>Редактирование страны, региона, города</h4>
                        <div class="botspacer5"><a href="{{ path('add_country') }}">Добавить страну</a></div>
                        <div class="botspacer5"><a href="{{ path('add_region') }}">Добавить регион</a></div>
                        <div class="botspacer5"><a href="{{ path('add_city') }}">Добавить город</a></div>
                    </div>
                </div>
                <div class="span4">
                    <div class="tagline">
                        <h4>Редактирование категорий</h4>
                        <div class="botspacer5"><a href="{{ path('add_category') }}">Добавить категорию</a></div>
                        <div class="botspacer5"><a href="{{ path('add_subcategory') }}">Добавить подкатегорию</a></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

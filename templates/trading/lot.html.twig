{% extends 'base.html.twig' %}

{% block title %}Торги{% endblock %}

{% block body %}
    <section id="subintro">
        <div class="jumbotron subhead" id="overview">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <div class="centered">
                            <h3>Торги</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <ul class="breadcrumb notop">
                        <li><a href="{{ path('index') }}">Главная</a><span class="divider">/</span></li>
                        <li class="active">Торги</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                <div class="span4">
                    <aside>
                        <div class="widget">
                            <a href="{{ path('add_lot') }}" class="btn btn-flat btn-color">Предложить цену</a>
                        </div>
                        <div class="widget">
                            <h4>Последние ставки</h4>
                            <ul class="recent-posts">
                                <li><a href="#">Lorem ipsum dolor sit amet munere commodo ut nam</a>
                                    <div class="clear">
                                    </div>
                                    <span class="date"><i class="icon-calendar"></i> 6 March, 2013</span>
                                    <span class="comment"><i class="icon-comment"></i> 4 Comments</span>
                                </li>
                                <li><a href="#">Sea nostrum omittantur ne mea malis nominavi insolens</a>
                                    <div class="clear">
                                    </div>
                                    <span class="date"><i class="icon-calendar"></i> 6 March, 2013</span>
                                    <span class="comment"><i class="icon-comment"></i> 2 Comments</span>
                                </li>
                            </ul>
                        </div>
                    </aside>
                </div>
                <div class="span8">
                    <article>
                        <div class="heading">
                            <h4>{{ lot.title }}</h4>
                        </div>
                        <div class="clearfix">
                        </div>
                        <div class="row">
                            <div class="span8">
                                <!-- start flexslider -->
                                <div class="flexslider">
                                    <ul class="slides">
                                        <li>
                                            <img src="assets/img/4.jpg" alt="" />
                                        </li>
                                        <li>
                                            <img src="assets/img/4.jpg" alt="" />
                                        </li>
                                        <li>
                                            <img src="assets/img/4.jpg" alt="" />
                                        </li>
                                    </ul>
                                </div>
                                <!-- end flexslider -->
                                <p>{{ lot.description }}</p>
                            </div>
                            <div class="span4">
                                <div class="project-widget">
                                    <h4><i class="icon-48 icon-beaker"></i> Дополнительная информация</h4>
                                    <ul class="project-detail">
                                        <li><label>Project name :</label> Very nice project</li>
                                        <li><label>Category :</label> Web design</li>
                                        <li><label>Project date :</label> 2 March 2013</li>
                                        <li><label>Project link :</label><a href="#">www.somelink.com</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
